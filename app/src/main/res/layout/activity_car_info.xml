<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainbackground"
    tools:context="cmpt276.jade.carbontracker.CarInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_nickname"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <EditText

                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/label_enterNickName"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_make"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spn_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_model"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spn_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_year"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spn_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_short_summary"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_CityMPG"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv_cityMPG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DEFAULT_NUM"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_HighwayMPG"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv_highwayMPG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DEFAULT_NUM"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_engine"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv_engine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DEFAULT_NUM"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/label_transmission"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tv_transmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DEFAULT_NUM"
                android:textAlignment="textEnd" />

            <Button
                android:id="@+id/btn_next"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_next"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_delete" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
