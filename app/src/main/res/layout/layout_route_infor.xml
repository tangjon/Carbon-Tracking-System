<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_route_infor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmpt276.jade.carbontracker.Route_Info_Activity">

    <EditText
        android:id="@+id/editJourneyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Route_Info_text_enter_name"
        android:layout_below="@+id/Route_Info_text_enter_name"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Route_Info_edite_highway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Route_Info_text_enter_highway"
        android:layout_below="@+id/Route_Info_text_enter_highway"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="km"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/Route_Info_text_enter_highway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editJourneyName"
        android:layout_below="@+id/editJourneyName"
        android:layout_marginTop="25dp"
        android:text="HighWay:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/RouRoute_Info_text_enter_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Route_Info_edite_highway"
        android:layout_below="@+id/Route_Info_edite_highway"
        android:layout_marginTop="40dp"
        android:text="City:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Route_Info_edite_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Route_Info_edite_highway"
        android:layout_below="@+id/RouRoute_Info_text_enter_city"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="km"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/Route_Info_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_alignTop="@+id/Route_Info_text_enter_highway"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/Route_Info_text_enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:text="Route Name:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Route_Info_text_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Route_Info_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/Route_Info_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_alignBaseline="@+id/Route_Info_text_enter_name"
        android:layout_alignBottom="@+id/Route_Info_text_enter_name"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Route_Info_USE_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE"
        android:layout_alignTop="@+id/Route_Info_edite_highway"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/Route_Info_text_hint_for_save"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editJourneyName"
        android:layout_alignBottom="@+id/editJourneyName"
        android:layout_alignParentEnd="true"
        android:text="Hint: Save to Route List" />

    <TextView
        android:id="@+id/Route_Info_text_hint_for_use"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/RouRoute_Info_text_enter_city"
        android:text="Hint: See summary without saving." />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Route_Info_text_mode"
        android:text="Hint: Need a nickname if you want to save it." />
</RelativeLayout>
