<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_route_infor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainbackground"
    tools:context="com.example.alex.carbontracker.Route_Info_Activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/Route_Info_edite_name"
        android:hint="Name"
        android:layout_below="@+id/Route_Info_text_enter_name"
        android:layout_alignStart="@+id/Route_Info_text_enter_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/Route_Info_text_enter_highway"
        android:layout_alignStart="@+id/Route_Info_text_enter_highway"
        android:layout_marginTop="13dp"
        android:id="@+id/Route_Info_edite_highway"
        android:hint="km"
        android:inputType="number" />

    <TextView
        android:text="HighWay:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/Route_Info_text_enter_highway"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:layout_below="@+id/Route_Info_edite_name"
        android:layout_alignStart="@+id/Route_Info_edite_name" />

    <TextView
        android:text="City:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/RouRoute_Info_text_enter_city"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/Route_Info_edite_highway"
        android:layout_alignStart="@+id/Route_Info_edite_highway" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/RouRoute_Info_text_enter_city"
        android:layout_alignEnd="@+id/Route_Info_edite_highway"
        android:layout_marginTop="27dp"
        android:id="@+id/Route_Info_edite_city"
        android:hint="km" />

    <Button
        android:id="@+id/Route_Info_back_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Route_Info_edite_city"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:text="BACK" />

    <TextView
        android:text="Route Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Route_Info_text_enter_name"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Route_Info_text_mode"
        android:textSize="18sp" />

    <Button
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Route_Info_delete_btn" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Route_Info_ok_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/RouRoute_Info_text_enter_city"
        android:layout_marginEnd="13dp" />
</RelativeLayout>
