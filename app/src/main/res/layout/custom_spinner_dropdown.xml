<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/DEFAULT_TXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_year_display"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="5dp"
                android:text="@string/label_UCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textStyle="normal|bold" />

            <TextView
                android:paddingRight="5dp"
                android:text="@string/DEFAULT_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ucity"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:paddingRight="5dp"
                android:text="@string/label_UHighway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textStyle="normal|bold" />

            <TextView
                android:paddingRight="5dp"
                android:text="@string/DEFAULT_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_uhighway"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView18" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="5dp"
                android:text="@string/label_carbon_tail_pipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textStyle="normal|bold" />

            <TextView
                android:paddingRight="5dp"
                android:layout_toRightOf="@+id/textView21"
                android:text="@string/DEFAULT_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_carbon_tail_pipe"
                android:layout_weight="1" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>