<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainbackground"
    tools:context="cmpt276.jade.carbontracker.TransportSelectActivity">


    <Button
        android:id="@+id/btn_transport_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="@string/label_select_car" />

    <Button
        android:id="@+id/transport_walk_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_transport_car"
        android:layout_centerVertical="true"
        android:text="Walk/Bike" />

    <Button
        android:id="@+id/transport_bus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/transport_walk_btn"
        android:layout_below="@+id/transport_walk_btn"
        android:layout_marginTop="73dp"
        android:text="Bus/Skytrain" />
</RelativeLayout>
