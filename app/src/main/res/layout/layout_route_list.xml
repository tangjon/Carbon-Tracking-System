<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_route_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmpt276.jade.carbontracker.Route_List_Activity">

    <ListView
        android:id="@+id/Route_list_routeList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/Route_List_add_btn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Route_List_text_title" />

    <Button
        android:id="@+id/Route_List_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="ADD ROUTE" />

    <Button
        android:id="@+id/Route_List_summary_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Route_List_add_btn"
        android:text="Summary" />

    <TextView
        android:id="@+id/Route_List_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Route name               Highway(km)             City(km)" />

</RelativeLayout>
