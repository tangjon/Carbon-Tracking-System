<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.alex.carbontracker.Welcome_Activity">

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_btn_to_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Carbon Tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_app_name"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/welcome_btn_to_main"
        android:layout_alignBottom="@+id/welcome_btn_to_main"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/person2"
        android:id="@+id/welcome_person2"
        android:layout_alignTop="@+id/welcome_car1"
        android:layout_alignEnd="@+id/welcome_btn_to_main" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/car4"
        android:layout_marginStart="65dp"
        android:id="@+id/welcome_car3"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/welcome_person1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/person"
        android:layout_marginTop="46dp"
        android:id="@+id/welcome_person1"
        android:layout_below="@+id/welcome_car3"
        android:layout_alignStart="@+id/welcome_app_name"
        android:layout_marginStart="65dp" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/car3"
        android:id="@+id/welcome_car1"
        android:layout_width="100dp"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/welcome_person1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        app:srcCompat="@drawable/person3"
        android:layout_below="@+id/welcome_person1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/welcome_person3"
        android:layout_height="30dp" />

    <ImageView
        app:srcCompat="@drawable/back"
        android:id="@+id/welcome_back_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:layout_width="235dp" />

</RelativeLayout>
