<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmpt276.jade.carbontracker.Welcome_Activity">

    <TextView
        android:id="@+id/welcome_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="@string/app_name"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/welcome_person2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@drawable/person2"
        android:layout_alignTop="@+id/welcome_car1"
        android:layout_alignEnd="@+id/welcome_car1" />

    <ImageView
        android:id="@+id/welcome_car3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/welcome_person1"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        app:srcCompat="@drawable/car4" />

    <ImageView
        android:id="@+id/welcome_person1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/welcome_app_name"
        android:layout_below="@+id/welcome_car3"
        android:layout_marginStart="65dp"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/person" />

    <ImageView
        android:id="@+id/welcome_car1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/welcome_person1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/car3" />

    <ImageView
        android:id="@+id/welcome_person3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/welcome_person1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/person3" />

    <TextView
        android:id="@+id/welcome_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name 4"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_name3"
        android:layout_alignStart="@+id/welcome_name3" />

    <TextView
        android:id="@+id/welcome_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name 3"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_name2"
        android:layout_alignStart="@+id/welcome_name2" />

    <TextView
        android:id="@+id/welcome_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name 2"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_name1"
        android:layout_alignStart="@+id/welcome_name1" />

    <TextView
        android:id="@+id/welcome_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name 1"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_app_name"
        android:layout_toEndOf="@+id/welcome_person3" />

    <TextView
        android:id="@+id/tapToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_person1"
        android:layout_centerHorizontal="true"
        android:text="Tap Screen to Continue..."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
